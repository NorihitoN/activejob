<h1>メッセージ新規作成ページ</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(@task) do |f| %>

      <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <%= f.submit 'Submit', class: "btn btn-primary" %>
    <% end %>
    
    <%= link_to '一覧に戻る', tasks_path %>
  </div>  
</div>

